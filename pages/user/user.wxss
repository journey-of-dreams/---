page {
  perspective: 800px;
  background-color: #edece8;
}
.user_info_wrap {
  height: 45vh;
  position: relative;
  overflow: hidden;
}
.user_info_wrap .user_img_wrap {
  position: relative;
}
.user_info_wrap .user_img_wrap .user_bg {
  height: 55vh;
  filter: blur(10rpx);
}
.user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  transform: translateX(-50%);
  left: 50%;
  top: 25%;
  text-align: center;
}
.user_info_wrap .user_img_wrap .user_info .user_icon {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.user_info_wrap .user_img_wrap .user_info .user_name {
  margin-top: 32rpx;
  color: #fff;
}
.user_info_wrap .user_btn {
  position: absolute;
  width: 100%;
  height: 100%;
  background: var(--themeColor);
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  padding: 70rpx 0;
}
.user_info_wrap .user_btn .cube {
  width: 200rpx;
  height: 200rpx;
  /* 设置3d变形效果 */
  transform-style: preserve-3d;
  animation: rotate 20s infinite linear;
}
.user_info_wrap .user_btn .cube view {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.7;
  position: absolute;
}
.user_info_wrap .user_btn .cube view image {
  width: 200rpx;
  height: 200rpx;
}
.user_info_wrap .user_btn .cube .box1 {
  transform: rotateY(90deg) translateZ(100rpx);
}
.user_info_wrap .user_btn .cube .box2 {
  transform: rotateY(-90deg) translateZ(100rpx);
}
.user_info_wrap .user_btn .cube .box3 {
  transform: rotateX(90deg) translateZ(100rpx);
}
.user_info_wrap .user_btn .cube .box4 {
  transform: rotateX(-90deg) translateZ(100rpx);
}
.user_info_wrap .user_btn .cube .box5 {
  transform: rotateY(180deg) translateZ(100rpx);
}
.user_info_wrap .user_btn .cube .box6 {
  transform: rotateY(0deg) translateZ(100rpx);
}
@keyframes rotate {
  form {
    transform: rotateX(0) rotateZ(0);
  }
  to {
    transform: rotateX(1turn) rotateZ(1turn);
  }
}
.user_info_wrap .user_btn navigator .user_login {
  color: #fff;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -50rpx;
  color: #666;
}
.user_content .user_main .history_wrap {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 10rpx;
  background: #fff;
}
.user_content .user_main .history_wrap navigator {
  text-align: center;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .order_wrap {
  margin-top: 20rpx;
  background: #fff;
}
.user_content .user_main .order_wrap .order_title {
  height: 80rpx;
  padding: 15rpx;
  border-bottom: 1rpx solid #ccc;
}
.user_content .user_main .order_wrap .order_content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx;
  text-align: center;
}
.user_content .user_main .order_wrap .order_content navigator .iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}
.user_content .user_main .address_wrap {
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
}
.user_content .user_main .app_info_wrap {
  margin-top: 20rpx;
  background: #fff;
}
.user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.user_content .user_main .app_info_wrap .app_info_item button {
  position: absolute;
  width: 120rpx;
  left: 20rpx;
  top: 0;
  height: 100%;
  opacity: 0;
}
.user_content .user_main .recommend_wrap {
  padding: 20rpx;
  margin-top: 20rpx;
  background: #fff;
  margin-bottom: 100rpx;
  position: relative;
}
.user_content .user_main .recommend_wrap button {
  position: absolute;
  top: 0;
  left: 0;
  width: 250rpx;
  opacity: 0;
}
